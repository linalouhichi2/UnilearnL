{% extends 'base.html.twig' %}

{% block title %}Rating index{% endblock %}

{% block body %}
    <h1>Rating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdRating</th>
                <th>Rate</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td>{{ rating.idRating }}</td>
                <td>{{ rating.rate }}</td>
                <td>{{ rating.date ? rating.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_rating_show', {'idRating': rating.idRating}) }}">show</a>
                    <a href="{{ path('app_rating_edit', {'idRating': rating.idRating}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rating_new') }}">Create new</a>
{% endblock %}
